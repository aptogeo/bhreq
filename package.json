{
  "name": "bhreq",
  "version": "0.0.5",
  "description": "Browser HTTP requests",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "module": "lib/index.js",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "tslint '{src, test}/**/.{ts,tsx}'",
    "build": "rimraf lib && rimraf dist && mkdir lib && mkdir dist && npm run lint && tsc -p tsconfig.json && browserify lib/index.js -s bhreq -t > dist/bhreq.js && cp dist/bhreq.js test/bhreq.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aptogeo/hrq.git"
  },
  "keywords": [
    "HTTP request"
  ],
  "author": "Mathieu MAST",
  "license": "MIT",
  "devDependencies": {
    "browserify": "^16.2.3",
    "husky": "^1.3.1",
    "rimraf": "^2.6.3",
    "tslint": "^5.15.0",
    "typescript": "3.4.1"
  }
}
